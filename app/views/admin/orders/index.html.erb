
    <h2>订单统计</h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>订单号</th>
          <th>总价</th>
          <th>支付方式</th>
          <th>支付情况</th>
          <th>处理订单</th>

        </tr>

      </thead>



      <tbody>
       <% @orders.each do |order| %>
       <tr>
      <td><%= order.id %> </td>
      <td><%= order.total %> </td>
      <td><%= order.payment_method %> </td>
      <td><%= order.is_paid %> </td>
      <td><%= link_to("取消订单",admin_orders_path(order), method: :post, class: "btn btn-lg btn-success pull-right") %>
          <%= link_to("出货",admin_orders_path(order), method: :post, class: "btn btn-lg btn-primary pull-right") %>

</td>

    </tr>

    <% end %>
    </tbody>
  </table>
