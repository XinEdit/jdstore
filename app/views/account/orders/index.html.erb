<div class="row">
  <div class="col-md-12">
    <h2>以往订单</h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">Order No.</th>
          <th>总价</th>
          <th>下单时间</th>
          <th>地址</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>

        <tr>

          <td>
             <%= link_to order.id, order_path(order.token) %>
          </td>
          <td>
            <%= order.total %>
          </td>
          <td>
            <%= order.created_at %>
          </td>
          <td><%= order.billing_address %></td>
        </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>
